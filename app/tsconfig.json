{
  "extends": ["./node_modules/@mx/config/tsconfig.json"],
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["dom", "ES2022", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": []
}
